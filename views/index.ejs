<%-include("./partials/header.ejs")%>
    <div class="container mt-5">
        <div class="row">
            <div class="col-sm-6">
                <h2 class="alert alert-success text-center">Add a New Student</h2>
                <form method="post" action="/student/user/data">
                    <div class="mb-3">
                        <label class="form-label">Name:</label><br>
                        <input type="text" name="username" class="focus" autofocus autocomplete="off" required >
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Age:</label><br>
                        <input type="text" name="userage" class="focus" autocomplete="off" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Game:</label><br>
                        <input type="text" name="usergame" class="focus" autocomplete="off" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Rating:</label><br>
                        <input type="text" name="userrating" class="focus" autocomplete="off" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>


            <div class="col-sm-6">
                <h2 class="alert alert-warning text-center">List Of Students</h2>
                <table class="table table-striped  table-hover">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Name</th>
                            <th>Age</th>
                            <th>Game</th>
                            <th>Rating</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% var i=1%>
                        <%data.forEach((item)=>{%>
                            <tr>
                                <td><%=i++%></td>
                                <td><%=item.name%></td>
                                <td><%=item.age%></td>
                                <td><%=item.game%></td>
                                <td><%=item.rating%></td>
                                <td>
                                    <form method="get" action="/student/edit/<%=item._id%>" class="d-inline" >
                                        <button type="submit" class="btn" >
                                            <i class="fa-solid fa-pen-to-square text-primary"></i>
                                        </button>
                                    </form>
                                   <form method="post" class="d-inline" action="/student/delete/<%=item._id%>" >
                                        <button type="submit" class="btn" >
                                            <i class="fa-solid fa-trash text-danger ml-0"></i>
                                        </button>
                                   </form>
                                 </td>
                         <%})%>
                       
                            

                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
<%-include("./partials/footer.ejs")%>